{
    "name": "AWS development environment",
    "id": "aws",
    "version": "0.0.2",
    "description": "Installs AWS CLI, AWS SAM and other development tools",
    "options": {
      "installAWSCDK": {
        "type": "boolean",
        "default": false,
        "description": "Install the AWS CDK"
      },
      "installAWSSAMCLI": {
        "type": "boolean",
        "default": false,
        "description": "Install the AWS SAM CLI"
      }
    },
    "customizations": {
        "vscode": {
          "extensions": [
            "amazonwebservices.aws-toolkit-vscode"
          ]
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ]
}
